<?xml version="1.0" encoding="UTF-8"?>
<database xmlns="http://db.apache.org/torque/4.0/templates/database"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://db.apache.org/torque/4.0/templates/database
        http://db.apache.org/torque/4.0/templates/database-strict.xsd"
  name="napp"
  defaultIdMethod="native">

  <table name="student" description="Student Table">
    <column
      name="student_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="Student Id"/>
    <column
      name="absences"
      required="true"
      type="INTEGER"
      description="Student Absences"/>
    <column
      name="firstname"
      required="true"
      type="VARCHAR"
      size="128"
      description="Student FirstName"/>
    <column
      name="name"
      required="true"
      type="VARCHAR"
      size="128"
      description="Student Name"/>
    <column
      name="group_id"
      required="true"
      type="INTEGER"
      description="Foreign Key Author"/>
    <foreign-key foreignTable="usergroup">
      <reference
        local="group_id"
        foreign="group_id"/>
    </foreign-key>
  </table>

  <table name="user" description="User Table" idMethod="idbroker">
    <column
      name="user_name"
      required="true"
      primaryKey="true"
      type="VARCHAR"
      size="128"
      description="User Id"/>
    <column
      name="password"
      required="true"
      type="VARCHAR"
      size="128"
      description="User Password"/>
    <column
      name="isAdmin"
      required="true"
      type="BOOLEANINT"
      description="User right"/>
    <column
      name="student_id"
      required="false"
      type="INTEGER"
      description="Foreign Key Author"/>
    <foreign-key foreignTable="student">
      <reference
        local="student_id"
        foreign="student_id"/>
    </foreign-key>
  </table>
  
  <table name="usergroup" description="Group Table">
   <column
      name="group_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="Group Id"/>
   <column
      name="group_name"
      required="true"
      type="VARCHAR"
      size="128"
      description="Group Name"/>
  </table>
  
</database>